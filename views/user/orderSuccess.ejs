    <style>
        #snackbar, #snackbar-error{
          visibility: hidden;
          min-width: 250px;
          margin-left: -125px;
          background-color: #ffff02;
          color: #fff;
          text-align: center;
          border-radius: 2px;
          padding: 10px;
          position: fixed;
          z-index: 1;
          left: 50%;
          bottom: 100px;
          font-size: 17px;
          border-radius: 15px;
        }
        
        #snackbar.show, #snackbar-error.show {
          visibility: visible;
          -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
          animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }
        
        @-webkit-keyframes fadein {
          from {bottom: 0; opacity: 0;} 
          to {bottom: 30px; opacity: 1;}
        }
        
        @keyframes fadein {
          from {bottom: 0; opacity: 0;}
          to {bottom: 30px; opacity: 1;}
        }
        
        @-webkit-keyframes fadeout {
          from {bottom: 30px; opacity: 1;} 
          to {bottom: 0; opacity: 0;}
        }
        
        @keyframes fadeout {
          from {bottom: 30px; opacity: 1;}
          to {bottom: 0; opacity: 0;}
        }





        .address .active {
          border-color: #28a745 !important;
          background-color: #f2f2f2;
          box-shadow: 0 3px 6px rgba(0, 0, 0, 0.18), 0 3px 6px rgba(0, 0, 0, 0.23);
        }

        .card {
          cursor: pointer;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15), 0 2px 5px rgba(0, 0, 0, 0.2);
          -webkit-transition: all 0.5s ease;
          -moz-transition: all 0.5s ease;
          -o-transition: all 0.5s ease;
          transition: all 0.5s ease;
        }


    </style>
    <style>
        /* Custom Card Style */
.custom-card {
    background-color: #f3f6fa;
    border: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Header Style */
.custom-card h1 {
    margin: 0;
    padding: 20px 0 0 30px;
    font-size: 2.5rem;
}

/* Invoice Style */
.invoice {
    background-color: #ffffff;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Order Confirmed Heading */
.invoice h5 {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 20px;
}

/* Paragraph Style */
.invoice p {
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 15px;
}

/* Payment Table */
.payment table {
    width: 100%;
    border-collapse: collapse;
}

.payment th,
.payment td {
    padding: 10px 0;
    border-bottom: 1px solid #dee2e6;
}

/* Product Table */
.product table {
    width: 100%;
    border-collapse: collapse;
}

.product img {
    max-width: 90px;
}

.product th,
.product td {
    padding: 10px 0;
    border-bottom: 1px solid #dee2e6;
}

/* Totals Table */
.totals table {
    width: 100%;
    border-collapse: collapse;
}

.totals th,
.totals td {
    padding: 10px 0;
}

/* Footer Style */
.footer {
    background-color: #ffffff;
    border-top: 1px solid #dee2e6;
    border-radius: 8px;
    margin-top: 30px;
}

.footer a {
    color: #007bff;
    text-decoration: none;
}

/* Brand Text Style */
.brand-text {
    font-weight: bold;
    font-size: 1rem;
}

