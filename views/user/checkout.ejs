<section class="checkout spad">
    <div class="container" style="margin-top: 9rem;">
      <div class="checkout__form">
        <h4>Billing Details</h4>
        <div>
          <div class="row">
            <div class="col-lg-8 col-md-6">


              <div class="checkout__input">
                <p>Building Name<span>*</span></p>
                <input type="text" value="<%= address.buildingName %>" class="font-weight-bold text-dark" readonly>
              </div>
              <div class="checkout__input">
                <p>Street<span>*</span></p>
                <input type="text" value="<%= address.street %>" class="font-weight-bold text-dark" readonly>
              </div>
              <div class="checkout__input">
                <p>City<span>*</span></p>
                <input type="text" value="<%= address.city %>" class="font-weight-bold text-dark" readonly>
              </div>
              <div class="checkout__input">
                <p>State<span>*</span></p>
                <input type="text" value="<%= address.state %>" class="font-weight-bold text-dark" readonly>
              </div>
              <div class="checkout__input">
                <p>Pincode<span>*</span></p>
                <input type="text" value="<%= address.pincode %>" class="font-weight-bold text-dark" readonly>
              </div>
              <div class="checkout__input">
                <p>Country<span>*</span></p>
                <input type="text" value="<%= address.country %>" class="font-weight-bold text-dark" readonly>
              </div>
              <div class="checkout__input">
                <p>Phone Number<span>*</span></p>
                <input type="text" value="<%= address.phonenumber %>" class="font-weight-bold text-dark" readonly>
              </div>

              <input type="hidden" name="address" id="addressId" value="<%= address._id %>">


            </div>



            <div class="col-lg-4 col-md-6">
              <form class="mb-30 ml-4" id="couponForm">
                <div class="input-group" style="height: 1rem;">
                  <input type="text" id="couponName" pattern="^(?!.*\s)[^\s]+(?<!\s)$"
                    class="form-control border-0 form-control-sm text-dark font-weight-bold"
                    style="box-shadow: none;background-color: #f5f5f5;" placeholder="Coupon Code" required>
                  <div class="input-group-append d-flex justify-content-center align-items-center">
                    <button type="submit" class="btn btn-sm btn-dark">Apply Coupon</button>
                  </div>
                </div>
              </form>

          
              <div id="myModal" class="modal">
                <div class="modal-content">
                  <span class="close">&times;</span>
                  <h3>Coupons</h3>
              
                  <% if (coupons && coupons.length > 0) { %>
                    <ul class="coupon-list">
                      <% coupons.forEach((coupon) => { %>
                        <li class="coupon-item">
                          <div class="coupon-details">
                            <span class="coupon-name"><%= coupon.couponName %></span>
                            <span class="coupon-min-amount ml-2">Minimum Spend <%= coupon.minAmount %></span>
                            
                            
                          </div>
                          <button class="copy-button" onclick="copyCoupon('<%= coupon.couponName %>')">
                            <i class="fa-regular fa-copy" style="color: #fffdfd;"></i> Copy
                          </button>
                        </li>
                      <% }) %>
                    </ul>
                  <% } else { %>
                    <h3>Sorry, No Coupons are Available</h3>
                  <% } %>
              
                </div>
              </div>
              

              
                  

              <div class="d-flex justify-content-center align-items-center mt-5">
                <a class="btn text-light" id="viewCouponBtn" style="background-color: #da0303;">View Coupons</a>
              </div>

              
              <div class="checkout__order mt-5">
                <h4>Your Order</h4>
                <div class="checkout__order__products">Products <span>Total</span></div>
                <ul>
                    <% for(let i=0;i<cart.items.length;i++){ %>
                        <li><%= productList[i].productName %> <span> &#x20B9;<%= cart.items[i].totalPrice.toFixed(2) %></span></li>
                    <% } %>
                <div class="checkout__order__subtotal">Subtotal <span> &#x20B9;<%= cart.cartPrice.toFixed(2) %></span></div>

                <div class="checkout__order__total">Coupon <span class="text-dark couponShow"> &#x20B9; 0</span></div>
                <div class="checkout__order__total">Total <span id="totalprice"> &#x20B9;<%= cart.cartPrice.toFixed(2) %></span></div>

                <div class=" p-30 " >
                  <div class="form-group paymentx">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" value="cod" name="payment" id="cod">
                      <label class="custom-control-label" for="paypal">Cash on Delivery</label>
                    </div>
                  </div>
                  <div class="form-group paymentx">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" value="online" name="payment" id="online">
                      <label class="custom-control-label" for="directcheck">Pay Online</label>
                    </div>
                  </div>
                     

                  <div class="form-group mb-4 paymentx">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" value="wallet" name="payment" id="wallet" >
                            <label class="custom-control-label" for="banktransfer">Wallet Payment</label>
                        </div>
                    </div>
                    <div class="wallet d-flex " >
