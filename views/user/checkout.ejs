                    document.querySelector('.couponShow').setAttribute("id",result.data.coupon._id);
                    document.getElementById('totalprice').innerHTML= `Rs.${('<%= cart.cartPrice %>'- result.data.coupon.discount).toFixed(2)}`;

                    Swal.fire({
                    icon: "success",
                    title: "Coupon Applied",
                    text: "Coupon applied successfully!",
                });
                }
            })
        })

        function handleOnlinePayment(){
            const payment = document.querySelector('input[name="payment"]:checked').value;
            const addressId = document.getElementById('addressId').value;
            const couponId = document.querySelector('.couponShow').id;

            $.ajax({
                url: "/razorpay",
                type: "POST",
                data: {
                    coupon: couponId
                },
                success: function(res){
                    if(res.success){
                        var options = {
                            "key": ""+res.key_id+"",
                            "amount": ""+res.amount+"",
                            "amount": "INR",
                            "name": "CrossCountry",
                            "image": "/images/logo.jpg",
                            "order_id": ""+res.order_id+"",
                            "handler": function(response){

                                axios({
                                    method: "post",
                                    url: '/checkout',
                                    data: {
                                        payment: payment,
                                        address: addressId,
                                        payment_id: response.razorpay_payment_id,
                                        couponId: couponId,
                                    }
                                })
                                .then((result)=>{
                                    if(result.data.response){
                                        location.href=`/order/success?orderId=${result.data.orderId}`;
                                    }
                                })

                            },
                            "prefill": {
                                "name": ""+res.name+"",
                                "email": ""+res.email+""
                            },
                            "theme": {
                                "color": "#da0303"
                            }
                        };
                        var razorpayObject = new Razorpay(options);
                        razorpayObject.on('payment.failed', function (response){
                        //   res.redirect("/order/payFail", {
                        //     query: {
                        //         price: orderPrice,
                        //         address: address
                        //     }
                        // });  
                         
                         location.href='/order/payFAil';


                         });
                       
                        razorpayObject.open();
                    }
                }
            })

            
            

        }


        function placeorder(){
            const payment = document.querySelector('input[name="payment"]:checked').value;
            const addressId = document.getElementById('addressId').value;
            const couponId = document.querySelector('.couponShow').id;

            if(payment == "online"){

                handleOnlinePayment();
                
            }else{
                axios({
                    method: "post",
                    url: '/checkout',
                    data: {
                        payment: payment,
                        address: addressId,
                        couponId: couponId,
                    }
                })
                .then((result)=>{
                    if(result.data.response){
                        location.href=`/order/success?orderId=${result.data.orderId}`;
                    }
                })                
            }
                  
              
            if (payment === "wallet") {
                     const walletBalance = `<%= wallet ? wallet.balance : 0 %>`;
                     const totalCartPrice = parseFloat('<%= cart.cartPrice.toFixed(2) %>');
  
                       if (walletBalance < totalCartPrice) {
                      Swal.fire({
                            icon: 'error',
                             title: 'Insufficient Wallet Balance',
                            text: 'Your wallet balance is not sufficient for this order.',
                             });
                            return;
                            }
                        }
        }

        
